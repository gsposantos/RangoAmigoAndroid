<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:id="@+id/contato_container"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:layout_margin="6dp"
    android:elevation="3dp"
    app:cardBackgroundColor="@color/secondaryTextColor" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgContato"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        app:srcCompat="@drawable/icon_perfil" />

    <TextView
        android:id="@+id/txtNomeContato"
        style="@style/textoTituloLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgContato"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/imgContato"
        android:text="Nome do Contato" />

    <TextView
        android:id="@+id/txtEmailContato"
        style="@style/textoLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgContato"
        android:layout_alignStart="@+id/txtNomeContato"
        android:text="umteste@teste.com" />

    <TextView
        android:id="@+id/txtFoneContato"
        style="@style/textoLista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtEmailContato"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:text="51 999999999" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>