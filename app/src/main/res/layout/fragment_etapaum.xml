<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guilherme.rangoamigo.fragments.EtapaUmFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <ImageButton
            android:id="@+id/imgEvento"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/no_image_menor"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtNomeEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/floatLabel"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/imgEvento">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:hint="@string/cadEvento_hintNomeEvento"
                android:inputType="text"
                android:maxLength="40" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtDataEvento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/floatLabel"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/txtNomeEvento">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:elevation="1dp"
                android:hint="@string/cadEvento_hintData"
                android:inputType="text"
                android:maxLength="40" />
        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

</FrameLayout>
