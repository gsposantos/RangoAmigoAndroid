<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:elevation="6dp"
        app:cardBackgroundColor="@color/secondaryTextColor" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgEvento"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/no_image" />

            <TextView
                android:id="@+id/txtNomeEvento"
                style="@style/textoTituloLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imgEvento"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imgEvento"
                android:text="Nome do Evento" />

            <TextView
                android:id="@+id/txtDataEvento"
                style="@style/textoLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtNomeEvento"
                android:layout_below="@+id/txtNomeEvento"
                android:layout_marginEnd="10dp"
                android:text="30 de fevereiro de 2020 Ã s 23:00" />

            <TextView
                android:id="@+id/txtEnderecoEvento"
                style="@style/textoPequenoLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgEvento"
                android:layout_alignStart="@+id/txtDataEvento"
                android:text="rua Qualquer, 123 - Cidade Qualquer" />

            <TextView
                android:id="@+id/txtLocalEvento"
                style="@style/textoLista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtEnderecoEvento"
                android:layout_alignStart="@+id/txtEnderecoEvento"
                android:layout_marginBottom="2dp"
                android:text="Nome Local Evento" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
